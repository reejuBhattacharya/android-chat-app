<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <!-- Add Material design text fields as design -->

    <ImageButton
        android:id="@+id/signup_profilepic_button"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/white"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:text="Set your Profile Picture"
        android:id="@+id/on_signup_button"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/signup_username_edittext"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:hint="Username"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/signup_profilepic_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="429dp" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/signup_email_edittext"
        android:inputType="textEmailAddress"
        android:layout_margin="30dp"
        android:hint="Email ID"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/signup_username_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/signup_password_edittext"
        android:inputType="textPassword"
        android:layout_margin="30dp"
        android:hint="Password"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/signup_email_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/signup_button"
        android:text="Sign Up"
        android:layout_margin="30dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/signup_password_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already signed up before? Login"
        android:id="@+id/alreadysignedin_textview"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/signup_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>