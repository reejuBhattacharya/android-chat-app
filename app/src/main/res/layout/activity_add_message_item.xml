<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:id="@+id/add_message_item_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/add_message_item_textview"
        app:layout_constraintStart_toEndOf="@id/add_message_item_imageview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/add_message_item_imageview"
        app:layout_constraintBottom_toBottomOf="@id/add_message_item_imageview"
        tools:text="username"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>