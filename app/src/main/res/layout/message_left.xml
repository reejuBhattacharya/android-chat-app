<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/left_message_username_textview"
        android:textSize="18sp"
        tools:text="username"
        android:textColor="@color/black"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:id="@+id/left_message_text_textview"
        app:layout_constraintTop_toBottomOf="@id/left_message_username_textview"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="This is the message from the left side"
        android:textSize="15sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>