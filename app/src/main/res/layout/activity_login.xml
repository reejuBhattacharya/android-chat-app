<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

<!--    Use material design to implement the edit text-->

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/login_email_edittext"
        android:inputType="textEmailAddress"
        android:hint="email"
        android:background="@color/white"
        android:layout_margin="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/login_password_edittext"
        android:layout_margin="30dp"
        android:hint="password"
        android:inputType="textPassword"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/login_email_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/login_button"
        android:text="Login"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/login_password_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Sign Up screen"
        android:id="@+id/backtosignup_textView"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>